@{
    ViewData["Title"] = "Регистрация работника";
}
@model TaskSystem.Dto.EmployeeDto
<div class="head">
    <h4>Добавить сотрудника</h4>
    <button id="closeButton" class="btn btn-primary">Закрыть</button>
</div>
<form class="form-add" asp-action="RegisterEmployee">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div>
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Login" class="control-label"></label>
        <input asp-for="Login" type="text"  class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-primary" />
    </div>
</form>