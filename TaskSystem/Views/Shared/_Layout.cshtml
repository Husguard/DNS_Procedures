@using TaskSystem.Models.Objects
@using Microsoft.AspNetCore.Identity

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskSystem</title>
    <link rel="stylesheet" asp-append-version="true" href="~/css/site.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/AddTask.css " />
    <link rel="stylesheet" asp-append-version="true" href="~/css/CommentSection.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/Index.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/MainTable.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/Modal.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/TaskActionsButton.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/NavBar.css" />
    <link rel="stylesheet" asp-append-version="true" href="~/css/TaskInfo.css" />
</head>
<body>
    <header>
            <div class="nav-container">
                <div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="btnShowTasks" onclick="taskList.getAll()">Список заданий</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" id="btnShowEmployees" onclick="employeeList.getAll()">Список работников</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Выйти из аккаунта</a>
                        </li>
                    </ul>
                </div>
            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
